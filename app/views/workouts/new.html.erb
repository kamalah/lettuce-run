<div class="container">
	<div class="input-form">
		<%= form_for [@plan, @workout] do |f| %>
		<%= f.label :date %>
		<%= f.datetime_select :date,class: 'form-control'%> <br> <br>
		<%= f.label :activity %>
		<%= f.select(:activity, @plan.activities.split(',')) %> <br>
		<%= f.label :duration %>
		<%= number_field :duration_hours, class: 'form-control' %>
		<%= number_field :duration_min, class: 'form-control' %><br>
		<%= f.label :distance %>
		<%= f.number_field :distance %> <br>
		<%= f.submit "Save" %>
		<% end %>
	</div>
</div>