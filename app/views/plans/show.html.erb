<div class="container">
  <h1> Your Training Plan </h1>
  <div class="row">
    <div class="col-md-12 text-center">
      <div class="well controls">
        <%= link_to calendar_show_path(date: @date - 1.month), class: "btn btn-default" do %>
        <i class="glyphicon glyphicon-backward"></i>
        <% end %>
        <%= "#{@date.strftime("%B")} #{@date.year}" %>
        <%= link_to calendar_show_path(date: @date + 1.month), class: "btn btn-default" do %>
        <i class="glyphicon glyphicon-forward"></i>
        <% end %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12">
      <%= calendar @date do |date| %>
      <% if date.class == Hash %>
        <% if @weekly_summaries[date[:sum]] %>
      <p> Run - <%=@weekly_summaries[date[:sum]]['Run'] %></p>
        <% end %>
      <% else %>
      <%= date.day %>
      <% end %>
      <% if @workouts[date] %>
      <ul>
        <% @workouts[date].each do |workout| %>
        <li><%= workout.activity %> - <%= workout.distance %> </li>
       <% end %>
      </ul>
      <% end %>
      <% end %>
    </div>
  </div>
</div>